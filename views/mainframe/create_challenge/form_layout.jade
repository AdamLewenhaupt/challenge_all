#mainframe-form-layout
    form
        #challengeForm
            #challPic
            | Name:<br>
            input.input(type="text", name="name")br

            | Description:<br>
            textarea.input#descriptionInput(type="text", name="description",rows="10", cols="30")br

            | Public: 
            input#publicCheckbox(type="checkbox", name="public", value="yes")br

            #achievementBox
                |Achievement<br>
                | Name:
                input(type="text", name="achievementName")
                | Pic:

            #dateBox
                |Date(Optional)<br>
                |From 
                input#from(type="text", name="from")
                |To 
                input#to(type="text", name="to")

            input.invButton.hl#createButton(type="submit", value="Create Challenge")
        #friendInvite
            .invButton.hl Challenge All
            ol#friendBox
                - each friend in user.c_friends
                    li(tag=friend.tag).invButton.hl
                        != friend.tag

            .invButton.hl#unchallengeButton Unchallenge All